        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HourRate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.HourRate)
                @Html.ValidationMessageFor(model => model.HourRate)
            </div>
        </div>

